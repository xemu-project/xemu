FROM registry.fedoraproject.org/fedora:34

ENV PACKAGES \
    bison \
    bzip2 \
    ccache \
    diffutils \
    flex \
    findutils \
    gcc \
    git \
    libffi-devel.i686 \
    libselinux-devel.i686 \
    libtasn1-devel.i686 \
    libzstd-devel.i686 \
    make \
    meson \
    ninja-build \
    glib2-devel.i686 \
    glibc-devel.i686 \
    glibc-static.i686 \
    gnutls-devel.i686 \
    nettle-devel.i686 \
    pcre-devel.i686 \
    pixman-devel.i686 \
    sysprof-capture-devel.i686 \
    zlib-devel.i686

ENV QEMU_CONFIGURE_OPTS --cpu=i386 --disable-vhost-user
ENV PKG_CONFIG_LIBDIR /usr/lib/pkgconfig

RUN dnf update -y && dnf install -y $PACKAGES
RUN rpm -q $PACKAGES | sort > /packages.txt
