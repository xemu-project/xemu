. common.rc

requires_binary clang

cd "$BUILD_DIR"

OPTS="--cxx=clang++ --cc=clang --host-cc=clang"
OPTS="$OPTS --extra-cflags=-fsanitize=undefined \
    --extra-cflags=-fno-sanitize=float-divide-by-zero"
build_qemu $OPTS
check_qemu
install_qemu
